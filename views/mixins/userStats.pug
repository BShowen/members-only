mixin userStats(user)
  .row.justify-content-center
    .col.d-flex.flex-column.align-items-center.border-end
      p.m-0 Posts
      p.m-0= user.postCount
    .col.d-flex.flex-column.align-items-center
      p.m-0 Followers
      p.m-0 20
    .col.d-flex.flex-column.align-items-center.border-start
      p.m-0 Following
      p.m-0 10