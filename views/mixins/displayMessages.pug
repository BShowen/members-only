mixin displayMessages(messageList)
  div(
    class="row justify-content-center",
    style="height: 75px;"
  )
    .col-sm-10.col-md-9.col-lg-8.col-xl-6.col-xxl-5
      div
        each message in messageList 
          div(class="alert alert-danger text-center", role="alert")
            p.m-0= message  