extends layout 

block content 
  .row.justify-content-center 
    .col-sm-10.col-md-9.col-lg-8.col-xl-6.col-xxl-5
      div.card.mt-5.overflow-hidden.shadow-md
        div.card-body.bs-body-bg
          h1.card-title.text-center= title

          form(action="", method="POST")
            div.form-floating.mb-3
              input(
                type="email", 
                id="email", 
                name="email", 
                placeholder="Email", 
                class="form-control form-control-lg shadow-sm"
              )
              label(for="email") Email
            div 
              button(
                type="submit", 
                class="btn btn-primary btn-lg w-100"
              ) Reset
